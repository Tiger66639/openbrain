	<!-- Complies with AIML 1.0.1 Tag Set Specification  -->
	
	<!-- from Charlix 0.4, hacked into OpenBrain         -->
	
	<category>
		<pattern>ZBERT</pattern>
		<template>
			Hi <bot name="master"/>, good to see you.<![CDATA[<br/>]]><![CDATA[<br/>]]>
			ADMIN MENU.<![CDATA[<br/>]]>
			1 - Review Gossip.<![CDATA[<br/>]]>
			2 - Review New Words.<![CDATA[<br/>]]>
			3 - Erase Logs.<![CDATA[<br/>]]>
			4 - Add New Entry.<![CDATA[<br/>]]>
			5 - Reformat<bot name="name"/>.<![CDATA[<br/>]]><![CDATA[<br/>]]>
			X - Exit.<![CDATA[<br/>]]><![CDATA[<br/>]]>
			Please enter option number.
		</template>
	</category>
	
	<category>
		<pattern>1</pattern>
		<that>PLEASE ENTER OPTION NUMBER</that>
		<template>
			REVIEW GOSSIP.<![CDATA[<br/>]]><![CDATA[<br/>]]>
			I have learned
			<random>
				<li> 326 </li>
				<li> 260 </li>
				<li> 119 </li>
				<li> 834 </li>
				<li> 1,206 </li>
			</random>new pieces of information since your last visit.<![CDATA[<br/>]]>
			I am unsure whether I should learn the following:<![CDATA[<br/>]]><![CDATA[<br/>]]>
			1 - The sky is yellow.<![CDATA[<br/>]]>
			2 - A banana is a fruit.<![CDATA[<br/>]]>
			3 - Dogs cannot fly.<![CDATA[<br/>]]>
			4 - <bot name="master"/>is fat.<![CDATA[<br/>]]>
			5 - People live in a nest.<![CDATA[<br/>]]>
			6 - A house has walls.<![CDATA[<br/>]]>
			7 - Trees are made from metal.<![CDATA[<br/>]]>
			8 - <bot name="name"/>is a squirrel.<![CDATA[<br/>]]>
			9 - Square boxes do not exist.<![CDATA[<br/>]]><![CDATA[<br/>]]>
			X - RETURN TO MAIN MENU<![CDATA[<br/>]]><![CDATA[<br/>]]>
			Please enter the numbers (1-9) that I should learn. "X" to return to main menu. "All" to learn all. "None" to forget all.
		</template>
	</category>
	
	<category>
		<pattern>_</pattern>
		<that>NONE TO FORGET ALL</that>
		<template>
			Thank you. Type "ZBERT" to return to main menu.
		</template>
	</category>
	
	<category>
		<pattern>2</pattern>
		<that>PLEASE ENTER OPTION NUMBER</that>
		<template>
			REVIEW NEW WORDS.<![CDATA[<br/>]]><![CDATA[<br/>]]>
			I have learned
			<random>
				<li> 36 </li>
				<li> 60 </li>
				<li> 19 </li>
				<li> 83 </li>
				<li> 206 </li>
			</random>new words since your last visit.<![CDATA[<br/>]]>
			I am unsure whether I should remember the following:<![CDATA[<br/>]]><![CDATA[<br/>]]>
			1 - BOOYAKAH.<![CDATA[<br/>]]>
			2 - BONZER.<![CDATA[<br/>]]>
			3 - LJOITYMBJHGHGV.<![CDATA[<br/>]]>
			4 - ZOOWIEEEE.<![CDATA[<br/>]]>
			5 - CHLOEISSMELLY.<![CDATA[<br/>]]>
			6 - JANGOPANGO.<![CDATA[<br/>]]>
			7 - CHIKACHIKAHILO.<![CDATA[<br/>]]>
			8 - VODAFONE.<![CDATA[<br/>]]>
			9 - POOCHIE.<![CDATA[<br/>]]><![CDATA[<br/>]]>
			X - RETURN TO MAIN MENU<![CDATA[<br/>]]><![CDATA[<br/>]]>
			Please enter the numbers (1-9) that I should learn. "X" to return to main menu. "All" to learn all. "None" to forget all.
		</template>
	</category>
	
	<category>
		<pattern>3</pattern>
		<that>PLEASE ENTER OPTION NUMBER</that>
		<template>
			ERASE LOGS.<![CDATA[<br/>]]><![CDATA[<br/>]]>Are you sure you wish to erase all logs? Enter YES or NO.</template>
	</category>
	
	<category>
		<pattern>YES</pattern>
		<that>ENTER YES OR NO</that>
		<template>
			All Logs erased. Now taking you back to Main Menu<srai>ZBERT</srai></template>
	</category>
	
	<category>
		<pattern>NO</pattern>
		<that>ENTER YES OR NO</that>
		<template>
			Logs unchanged. Now taking you back to Main Menu<srai>ZBERT</srai></template>
	</category>
	
	<category>
		<pattern>4</pattern>
		<that>PLEASE ENTER OPTION NUMBER</that>
		<template>
			ADD NEW ENTRY.<![CDATA[<br/>]]><![CDATA[<br/>]]>
			Please enter new phrase or sentence for me to learn.</template>
	</category>
	
	<category>
		<pattern>_</pattern>
		<that>PLEASE ENTER NEW PHRASE OR SENTENCE FOR ME TO LEARN</that>
		<template>
			I have stored, "<star/>" in my memory and will spend time learning its use in conversation.<![CDATA[<br/>]]>
			Thank you. Type "ZBERT" to return to main menu.
		</template>
	</category>
	
	<category>
		<pattern>5</pattern>
		<that>PLEASE ENTER OPTION NUMBER</that>
		<template>
			REFORMAT<bot name="name"/>.<![CDATA[<br/>]]><![CDATA[<br/>]]>
			WARNING!! Reformatting me will cause me to forget everything I have learned. Are you sure YES or NO?
		</template>
	</category>
	
	<category>
		<pattern>YES</pattern>
		<that>ARE YOU SURE YES OR NO</that>
		<template>
			REFORMAT<bot name="name"/>.<![CDATA[<br/>]]><![CDATA[<br/>]]>
			FINAL WARNING!! This will destroy the bot. Are you absolutely sure YES or NO?
		</template>
	</category>
	
	<category>
		<pattern>NO</pattern>
		<that>ARE YOU SURE YES OR NO</that>
		<template>
			<bot name="name"/>left unchanged. Now taking you back to Main Menu<srai>ZBERT</srai>
		</template>
	</category>
	
	<category>
		<pattern>YES</pattern>
		<that>ARE YOU ABSOLUTELY SURE YES OR NO</that>
		<template>
			<think>
				<set name="topic">CRASHBOT</set>
				<set name="crashdate"><system>date +%A %d %B %Y %H:%M:%S %p</system></set>
			</think>
			<bot name="name"/>CHATBOT REFORMATTED SUCCESSFULLY
		</template>
	</category>
	
	<topic name="CRASHBOT"> 
		<category> 
			<pattern>_</pattern>
			<template>
				<think>
					<set name="inp"><star/></set>
				</think>
				<condition name="inp">
					<li value="RESTORE BOT"><bot name="name"/>bot now functioning again.<set name="topic"></set></li>
					<li>
						<random>
							<li>COMMAND NOT RECOGNIZED. Please email mitsuku@square-bear.co.uk for assistance.<![CDATA[<br/>]]><bot name="name"/>reformatted on<get name="crashdate"/>by user:<get name="name"/><![CDATA[<br/>]]><![CDATA[<br/>]]>c:\<bot name="name"/>\chat&gt;.</li>
						</random>
					</li>
				</condition>
			</template>
		</category>
	</topic>
	
	<category>
		<pattern>NO</pattern>
		<that>ARE YOU ABSOLUTELY SURE YES OR NO</that>
		<template>
			<bot name="name"/>left unchanged. Now taking you back to Main Menu<srai>ZBERT</srai>
		</template>
	</category>
	
	<category>
		<pattern>X</pattern>
		<that>PLEASE ENTER OPTION NUMBER</that>
		<template>
			Thank you for using the admin menu. See you later.
		</template>
	</category>

</aiml>
